{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="float-end">
        <button type="submit" form="form-payment" data-bs-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fas fa-solid fa-save"></i></button>
        {% for breadcrumb in breadcrumbs %}
          {% if breadcrumb.text == 'Payment' %}
            <a href="{{ breadcrumb.href }}" data-bs-toggle="tooltip" title="{{ button_back }}" class="btn btn-light"><i class="fas fa-solid fa-reply"></i></a></div>
          {% endif %}
        {% endfor %}
        <h1>{{ heading_title }}</h1>
      <ol class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
          <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ol>
    </div>
  </div>

  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
      <div class="card">
        <div class="card-header"><i class="fa-solid fa-pencil"></i> Settings</div>
        <div class="card-body">
          <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-payment" class="form-horizontal">
                <div class="row mb-3 required">
                  <label class="col-sm-2 col-form-label" for="payment_telr_applepay_store">{{ entry_store }}</label>
                  <div class="col-sm-10">
                    <input type="text" name="payment_telr_applepay_store" value="{{ payment_telr_applepay_store }}" placeholder="{{ help_store }}" id="payment_telr_applepay_store" class="form-control"/>
                    {% if error_store %}
                      <div class="text-danger">{{ error_store }}</div>
                    {% endif %}
                  </div>
                </div>
                <div class="row mb-3 required">
                  <label class="col-sm-2 col-form-label" for="payment_telr_applepay_authkey">{{ entry_authkey }}</label>
                  <div class="col-sm-10">
                    <input type="text" name="payment_telr_applepay_authkey" value="{{ payment_telr_applepay_authkey }}" placeholder="{{ help_authkey }}" id="payment_telr_applepay_authkey" class="form-control"/>
                    {% if error_authkey %}
                    <div class="text-danger">{{ error_authkey }}</div>
                  {% endif %}
                  </div>
                </div>
                <div class="row mb-3 required">
                  <label class="col-sm-2 col-form-label" for="payment_telr_applepay_purdesc">{{ entry_purdesc }}</label>
                  <div class="col-sm-10">
                    <input type="text" name="payment_telr_applepay_purdesc" value="{{ payment_telr_applepay_purdesc }}" placeholder="{{ help_purdesc }}" id="payment_telr_applepay_purdesc" class="form-control"/>
                    {% if error_purdesc %}
                    <div class="text-danger">{{ error_purdesc }}</div>
                    {% endif %}
                  </div>
                </div>
                <div class="row mb-3 required">
                  <label class="col-sm-2 col-form-label" for="payment_telr_applepay_merchant_identifier">{{ entry_merchant_identifier }}</label>
                  <div class="col-sm-10">
                    <input type="text" name="payment_telr_applepay_merchant_identifier" value="{{ payment_telr_applepay_merchant_identifier }}" placeholder="{{ help_merchant_identifier }}" id="payment_telr_applepay_merchant_identifier" class="form-control"/>
                    {% if error_merchant_identifier %}
                    <div class="text-danger">{{ error_merchant_identifier }}</div>
                    {% endif %}
                  </div>
                </div>
                <div class="row mb-3 required">
                  <label class="col-sm-2 col-form-label" for="payment_telr_applepay_merchant_certificate">{{ entry_merchant_certificate }}</label>
                  <div class="col-sm-6">
                    <input type="file" name="payment_telr_applepay_merchant_certificate" value="{{ payment_telr_applepay_merchant_certificate }}" placeholder="{{ help_merchant_certificate }}" id="payment_telr_applepay_merchant_certificate" class="form-control"/>
                    {% if error_certificate %}
                    <div class="text-danger">{{ error_certificate }}</div>
                    {% endif %}
                  </div>
                  {% if applepay_merchant_certificate_name %}
                  <label class="col-sm-2 fw-bold" for="applepay_merchant_certificate_name">{{ applepay_merchant_certificate_name }}</label>
                  {% endif %}
                </div>	
                <div class="row mb-3 required">
                  <label class="col-sm-2 col-form-label" for="payment_telr_applepay_merchant_key">{{ entry_merchant_key }}</label>
                  <div class="col-sm-6">
                    <input type="file" name="payment_telr_applepay_merchant_key" value="{{ payment_telr_applepay_merchant_key }}" placeholder="{{ help_merchant_key }}" id="payment_telr_applepay_merchant_key" class="form-control"/>
                    {% if error_certificate_key %}
                    <div class="text-danger">{{ error_certificate_key }}</div>
                    {% endif %}
                  </div>
                  {% if applepay_merchant_key_name %}
                  <label class="col-sm-2 fw-bold" for="applepay_merchant_key_name">{{ applepay_merchant_key_name }}</label>
                  {% endif %}
                </div>
                <div class="row mb-3 required">
                  <label class="col-sm-2 col-form-label" for="payment_telr_applepay_domain">{{ entry_domain }}</label>
                  <div class="col-sm-10">
                    <input type="text" name="payment_telr_applepay_domain" value="{{ payment_telr_applepay_domain }}" placeholder="{{ help_domain }}" id="payment_telr_applepay_domain" class="form-control"/>
                    {% if error_domain %}
                    <div class="text-danger">{{ error_domain }}</div>
                    {% endif %}
                  </div>
                </div>
                <div class="row mb-3 required">
                  <label class="col-sm-2 col-form-label" for="payment_telr_applepay_domain_name">{{ entry_domain_name }}</label>
                  <div class="col-sm-10">
                    <input type="text" name="payment_telr_applepay_domain_name" value="{{ payment_telr_applepay_domain_name }}" placeholder="{{ help_domain_name }}" id="payment_telr_applepay_domain_name" class="form-control"/>
                    {% if error_domain_name %}
                    <div class="text-danger">{{ error_domain_name }}</div>
                    {% endif %}
                  </div>
                </div>				
                <div class="row mb-3">
                  <label class="col-sm-2 col-form-label">{{ entry_status }}</label>
                  <div class="col-sm-10">
                    <select name="payment_telr_applepay_status" class="form-control">
                      {% if payment_telr_applepay_status %}
                      <option value="1" selected="selected">{{ text_enabled }}</option>
                      <option value="0">{{ text_disabled }}</option>
                      {% else %}
                      <option value="1">{{ text_enabled }}</option>
                      <option value="0" selected="selected">{{ text_disabled }}</option>
                    {% endif %}
                    </select>
                  </div>
                </div>
                <div class="row mb-3 required">
                  <label class="col-sm-2 col-form-label" for="payment_telr_total">{{ entry_total }}</label>
                  <div class="col-sm-10">
                    <input type="text" name="payment_telr_applepay_total" value="{{ payment_telr_applepay_total }}" placeholder="{{ help_total }}" id="payment_telr_applepay_total" class="form-control"/>
                  </div>
                </div>                
                <div class="row mb-3">
                  <label class="col-sm-2 col-form-label">{{ entry_geo_zone }}</label>
                  <div class="col-sm-10">
                    <select name="payment_telr_applepay_geo_zone_id" class="form-control">
                      <option value="0">{{ text_all_zones }}</option>
                    {% for geo_zone in geo_zones %}
                      {% if geo_zone['geo_zone_id'] == payment_telr_applepay_geo_zone_id %}
                      <option value="{{ geo_zone['geo_zone_id'] }}" selected="selected">{{ geo_zone['name'] }}</option>
                      {% else %}
                      <option value="{{ geo_zone['geo_zone_id'] }}">{{ geo_zone['name'] }}</option>
                      {% endif %}
                      {% endfor %}
                    </select>
                  </div>
                </div>
                <div class="row mb-3">
                  <label class="col-sm-2 col-form-label">{{ entry_pend_status }}</label>
                  <div class="col-sm-10">
                    <select name="payment_telr_applepay_pend_status_id" class="form-control">
                      {% for order_status in order_statuses %}
                        {% if order_status['order_status_id'] == payment_telr_applepay_pend_status_id %}
                      <option value="{{ order_status['order_status_id'] }}" selected="selected">{{ order_status['name'] }}</option>
                      {% else %}
                      <option value="{{ order_status['order_status_id'] }}">{{ order_status['name'] }}</option>
                      {% endif %}
                      {% endfor %}
                    </select>
                  </div>
                </div>
                <div class="row mb-3">
                  <label class="col-sm-2 col-form-label">{{ entry_comp_status }}</label>
                  <div class="col-sm-10">
                    <select name="payment_telr_applepay_comp_status_id" class="form-control">
                      {% for order_status in order_statuses %}
                        {% if order_status['order_status_id'] == payment_telr_applepay_comp_status_id %}
                          <option value="{{ order_status['order_status_id'] }}" selected="selected">{{ order_status['name'] }}</option>
                        {% else %}
                          <option value="{{ order_status['order_status_id'] }}">{{ order_status['name'] }}</option>
                        {% endif %}
                      {% endfor %}
                    </select>
                  </div>
                </div>
                <div class="row mb-3">
                  <label class="col-sm-2 col-form-label">{{ entry_void_status }}</label>
                  <div class="col-sm-10">
                    <select name="payment_telr_applepay_void_status_id" class="form-control">
                      {% for order_status in order_statuses %}
                        {% if order_status['order_status_id'] == payment_telr_applepay_void_status_id %}
                          <option value="{{ order_status['order_status_id'] }}" selected="selected">{{ order_status['name'] }}</option>
                        {% else %}
                          <option value="{{ order_status['order_status_id'] }}">{{ order_status['name'] }}</option>
                        {% endif %}
                      {% endfor %}
                    </select>
                  </div>
                </div>
          </form>      
        </div> <!-- panel-body -->
      </div>  
  </div> <!-- container-fluid -->
</div> <!-- content -->
<script type="text/javascript">
  //$('#tabs a:first').tab('show');
</script>
{{ footer }}
